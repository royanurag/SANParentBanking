@model IEnumerable<SANParentBanking.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<h2>Transaction Information</h2>
@if (User.IsInRole("Owner"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Account.Owner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Transaction_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Account.Owner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Transaction_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        @if (User.IsInRole("Owner"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })|
            </td>
        }

        @if (User.IsInRole("Owner") || User.IsInRole("Recipient"))
        {
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })|
            </td>
        }
        @if (User.IsInRole("Owner"))
        {
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        }
        
    </tr>
}

</table>
