@model IEnumerable<SANParentBanking.Models.WishList>

@{
    ViewBag.Title = "Index";
}

<h2>Wishlist Information</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Account.Owner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_Added)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WebLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Purchased)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Account.Owner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_Added)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WebLink)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchased)
        </td>
        @if (User.IsInRole("Owner") || User.IsInRole("Recipient"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })|
            </td>
        }

        @if (User.IsInRole("Owner") || User.IsInRole("Recipient"))
        {
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })|
            </td>
        }
        @if (User.IsInRole("Owner"))
        {
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        }
    </tr>
}

</table>
